@{
    ViewBag.Title = "Index Page";
}
<style type="text/css">    		
		body {
			background: url('http://lakto.org/assets/img/cover.jpg') no-repeat center center fixed;
			-webkit-background-size: cover;
			-moz-background-size: cover;
			-o-background-size: cover;
			background-size: cover;
		}
		
		.seconds {
			width: 40px;
			height: 40px;
			top: 280px;
			left: 280px;
			position: absolute;
			text-align: center;
			line-height: 40px;
			font-size: 18pt;
			border-radius: 50%;
			background-color: rgba(81, 81, 81, 0.2);
		}
		
		.minutes {
			width: 100px;
			height: 100px;
			top: 250px;
			left: 250px;
			position: absolute;
			text-align: center;
			line-height: 100px;
			font-size: 52pt;
			border-radius: 50%;
			background-color: rgba(126, 126, 126, 0.7);
		}
		
		.hours {
			width: 300px;
			height: 300px;
			top: 150px;
			left: 150px;
			position: absolute;
			text-align: center;
			line-height: 280px;
			font-size: 133pt;
			border-radius: 50%;
			background-color: rgba(181, 181, 181, 0.4);
		}
</style>
<script type="text/javascript">
    setInterval(function () {
        var seconds = new Date().getSeconds();
        var sdegree = seconds * 6 + 270;
        seconds = ("0" + seconds).slice(-2);
        $(".seconds").css({
            "transform": "rotate(" + sdegree + "deg) translate(160px) rotate(-" + sdegree + "deg)"
        }).text(seconds);

        var minutes = new Date().getMinutes();
        var mdegree = minutes * 6 + 270;
        minutes = ("0" + minutes).slice(-2);
        $(".minutes").css({
            "transform": "rotate(" + mdegree + "deg) translate(181px) rotate(-" + mdegree + "deg)"
        }).text(minutes);

        var hours = new Date().getHours();
        hours = ("0" + hours).slice(-2);
        $(".hours").text(hours);

    }, 1000);
</script>

