@model MVCEmpDemo.Models.User
@{
    ViewBag.Title = "Register";
}
@using (Html.BeginForm())
{
    <div class="jumbotron">
        <h3>Register</h3>
    </div>
    <hr />
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-8">
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.Label("First Name", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Fname, new { @class = "form-control", placeholder = "Enter First Name" })
                        @Html.ValidationMessageFor(m => m.Fname, null, new { @class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("Last Name", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Lname, new { @class = "form-control", placeholder = "Enter Last Name" })
                        @Html.ValidationMessageFor(m => m.Lname, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Department", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.DropDownList("DeptId", new SelectList(ViewBag.DeptList, "DeptId", "DeptName"), "Please select Department", new { @class = "form-control col-md-4" })
                        @Html.ValidationMessageFor(m => m.DeptId, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Contact", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Mobile, new { @class = "form-control", placeholder = "Enter mobile number" })
                    </div>
                </div>


                <div class="form-group">
                    @Html.Label("Email", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Emailid, new { @class = "form-control", placeholder = "Enter email address" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Password", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(t => t.Password, new { @class = "form-control", placeholder = "Enter password" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.Label("Confirm Password", new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        <input type="password" name="CPassword" class="form-control" id="CPassword" placeholder="Confirm password" inputmode="password">
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-4 col-md-4">
                        <input type="submit" value="Submit" class="btn btn-success">
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@Html.ActionLink("Back to Home", "Index")