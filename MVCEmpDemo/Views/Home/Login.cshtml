@model MVCEmpDemo.Models.LoginModel
@{
    ViewBag.Title = "LogIn";
}
<div class="jumbotron">
    <h3>Login</h3>
</div>
<hr />
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-8">
            <div class="text-danger">@ViewBag.ErrorMsg</div>
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(l => l.UserName, new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(e => e.UserName, new { @class = "form-control", placeholder = "Enter user name" })
                        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(l => l.Password, new { @class = "control-label col-md-4" })
                    <div class="col-md-4">
                        @Html.PasswordFor(e => e.Password, new { @class = "form-control", placeholder = "Enter password" })
                        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Submit" class="btn btn-success">
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a href="Index">Back to Index</a>
}

