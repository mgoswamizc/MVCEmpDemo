@model MVCEmpDemo.Models.Department
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm())
{
    <div class="jumbotron">
        <h3>Register</h3>
    </div>
    <hr />
    <div class="row">
        <div class="form-horizontal">
            @if (ViewBag.SucMsg == false)
            { 
                <div class="alert alert-danger">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
                    <strong>@ViewBag.SomeError</strong>
                </div>
            }
            <div class="form-group">
                @Html.Label("Department Name", new { @class = "control-label col-md-4" })
                <div class="col-md-4">
                    @Html.TextBoxFor(d => d.DeptName, new { @class = "form-control", placeholder = "Enter Department Name" })
                    @Html.ValidationMessageFor(d => d.DeptName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-4">
                    <input type="submit" value="Creat" class="btn btn-success">
                </div>
            </div>
        </div>
    </div>

}
