@model IEnumerable<MVCEmpDemo.Models.Department>
@{
    ViewBag.Title = "Department";
}
<script>
    $(function () {
        $(".del").click(function (e) {
            var c = confirm("Are you sure?");
            if (c == false) {
                e.preventDefault();
            }
        });
    });
</script>
<div class="jumbotron">
    <h3>All Department</h3>
</div>
<hr />
@if (@ViewBag.Result != null)
{
    <div class="alert alert-danger">
        <a href="#" class="close" data-dismiss="alert" aria-label="close" title="close">×</a>
        <strong>@ViewBag.Result</strong>
    </div>
}
<div class="row">
    <strong> @Html.ActionLink("Creat New", "Create")</strong>
    <table class="table table-striped table-responsive">
        <tr>
            <th>@Html.DisplayNameFor(model => model.DeptName)</th>
            <th><b>Action</b></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.DeptName)</td>
                <td>
                    <a href="~/Department/Edit/@item.DeptId"><span data-toggle="tooltip" data-placement="left" title="Edit Detail" class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp;&nbsp;
                    <a href="~/Department/Delete/@item.DeptId" class="del"><span data-toggle="tooltip" data-placement="left" title="Delete" class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </table>
</div>
@Html.ActionLink("Back to Home", "Index", "Home")